{{#if hasLabel}}
  {{uxs-form-label label name=name disabled=disabled style=style}}
{{/if}}
{{#if hasTextInput}}
  {{uxs-form-input
    autocomplete=autocomplete
    model=model
    name=name
    type=type
    value=value
    disabled=disabled
    placeholder=placeholder
    readonly=readonly
    style=style
    max=max
    min=min
    step=step
  }}
{{/if}}
{{#if hasTextArea}}
  {{uxs-form-textarea model=model name=name type=type value=value disabled=disabled style=style}}
{{/if}}

{{yield (hash
  label=(component    "uxs-form-label"        name=name disabled=disabled style=style)
  input=(component    "uxs-form-input"        model=model name=name disabled=disabled value=value placeholder=placeholder readonly=readonly style=style max=max min=min step=step)
  textarea=(component "uxs-form-textarea"     model=model name=name disabled=disabled value=value placeholder=placeholder readonly=readonly style=style rows=rows cols=cols)
  dropdown=(component "uxs-form-dropdown"     model=model name=name disabled=disabled value=value placeholder=placeholder readonly=readonly style=style)
  date=(component     "uxs-form-date"         model=model name=name disabled=disabled placeholder=placeholder readonly=readonly style=style)
  datetime=(component "uxs-form-datetime"     model=model name=name disabled=disabled placeholder=placeholder readonly=readonly inlineInput=inline style=style)
  time=(component     "uxs-form-time"         model=model name=name disabled=disabled placeholder=placeholder readonly=readonly inlineInput=inline style=style)
  row=(component      "uxs-form-control-row"  model=model name=name disabled=disabled style=style)
  tip=(component      "uxs-form-tip"          name=name disabled=disabled error=hasValidationError style=style)
  warning=(component  "uxs-form-warning"      name=name disabled=disabled error=hasValidationError)
  error=(component    "uxs-form-error"        name=name disabled=disabled)
)}}

{{#if hasTip}}
  {{uxs-form-tip tip name=name disabled=disabled error=hasValidationError style=style}}
{{/if}}
{{#if hasWarning}}
  {{uxs-form-warning warning name=name disabled=disabled error=hasValidationError}}
{{/if}}
{{#if hasError}}
  {{uxs-form-error error name=name disabled=disabled}}
{{/if}}
{{#if hasValidationError}}
  {{uxs-form-error
    (v-get model name 'message')
    name=name
    disabled=disabled
  }}
{{/if}}
